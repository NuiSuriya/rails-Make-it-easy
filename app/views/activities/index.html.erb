<h1>Activities page</h1>


<div class="container">
  <div class="row justify-content-center barr-search">
    <div class="d-flex justify-content-end align-items-start mb-3">
      <%= form_with url: activities_path, method: :get, class: "d-flex" do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Looking for something else?"
        %>
        <%= submit_tag "Search", class: "button" %>
      <% end %>
    </div>
    <div class="col-sm-8">
      <div id="activities">
        <% @activities.each do |activity| %>
          <h4><%= activity.name %></h4>
          <p><%= activity.location %></p>
          <p><%= activity.date %></p>
        <% end %>
      </div>
    </div>
      <div class="d-flex justify-content-end"style="width: 300px; height: 300px;"
        data-controller="map"
        data-map-markers-value="<%= @markers.to_json %>"
        data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
  </div>
</div>
