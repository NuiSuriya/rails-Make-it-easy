<div class="container">
  <% @dates.each do |date| %>
    <div class="upcoming-activities-card mt-2 shadow rounded-4 d-flex justify-content-between">
      <div class="upcoming-activities-left-block">
        <div class="upcoming-activies-picture m-1 p-1">
          <img src="<%= cl_image_path date.activity.photos.first.key %>" class="d-block rounded-4" alt="..">
        </div>
        <div class="upcoming-activities-information">
          <div class="upcoming-activities-name"><%= date.activity.name %></div>
          <div class="upcoming-activities-date"><%= date.date %></div>
          <div class="upcoming-activities-location"><%= date.activity.location %></div>
        </div>
      </div>
      <div class="upcoming-activities-qrcode"><%= image_tag "QR_CODE.jpg", id:"QRcode2" %></div>
    </div>
  <% end %>
</div>
