<div class="container">
  <div class="small-card card-box-shadow row">
    <div class="card-grid">
      <% @activities.each do |activity| %>
        <div class="card card-game flex-grow card-index", style="width: 18rem;">
          <div class="card-body">
            <% if activity.photos.attached? %>
              <div class="card-img-top" style="background-image: linear-gradient(rgba(0,0,0,0.3),
                rgba(0,0,0,0.2)), url('<%= cl_image_path activity.photos.first.key, height: 400, crop: :fill %>')">
              </div>
              <% else %>
              <img src="https://tinypng.com/images/social/website.jpg" class="card-img-top" alt="...">
            <% end %>
            <%= activity.name %>
          </div>
        </div>
      <% end %>
