<% require 'date'  %>

<div class="container">

  <div class="my-page">
    <div class="dasboar-card shadow">
      <div class="avatar-dashboard">
        <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar-large shadow" %>
      </div>
      <div class="user-information">
        <div class="name"><h4><%= "Hello #{current_user.username.capitalize}!" %></h2></div>
        <div class="dashboard-tow-buttons">
          <button type="button" class="btn btn-warning dasboard-button">New Activity</button>
          <button type="button" class="btn btn-warning dasboard-button">Change Profile</button>
        </div>
        <div class="statistics">
          <% dates = [] %>
          <% @bookings.each do |booking| %>
            <% if booking.date > Date.today %>
              <% dates << booking %>
            <% end %>
          <% end %>
          <div class="statistic"><h6><%= "You have #{dates.size} upcoming activities." %><%= image_tag "orange_bag.png", class: "dashboard-icon" %></h6></div>
          <div class="statistic"><h6> <%= "You had already #{@bookings.size - dates.size} activities." %><%= image_tag "blue_bag.png", class: "dashboard-icon" %></h6></div>
          <div class="statistic"><h6> <%= "You can do #{@activities.size} activities." %><%= image_tag "orange_bag.png", class: "dashboard-icon" %></h6></div>
        </div>
      </div>
    </div>

    <div class="tester">
      <div id="carouselExampleCaptions" class="carousel slide bookings-cards" data-bs-ride="false">
        <div class="card-image carousel-inner shadow">
          <div class="carousel-item active">
            <img src="https://tinypng.com/images/social/website.jpg" class="d-block w-100" alt="...">
            <div class="carousel-caption d-none d-md-block background">
              <h5>All Your Activies</h5>
              <p><%= "You have #{@bookings.size} activities" %></p>
            </div>
          </div>
            <% @bookings.each do |booking| %>
              <div class="carousel-item">
                <img src="<%= cl_image_path booking.activity.photos.first.key %>" class="d-block w-100" alt="..">
                <div class="carousel-caption d-none d-md-block background">
                  <h5><%= link_to booking.activity.name, booking_path(booking) %></h5>
                  <p><%= "#{booking.date.strftime("%d %b %Y")}, #{booking.date.strftime("%H:%M")}" %></p>
                </div>
                <div class="carousel-caption d-none d-md-block">
                </div>
              </div>
            <% end %>
        </div>
        <div>
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions"data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
      </div>


      <div class="likings-cards shadow">
        <div class="d-flex">
          <% @likes.each do |like| %>
          <div class="liking-card">
            <div class="like-photo" style="background-image: url('<%= cl_image_path like.activity.photos.first.key %>');">
              <%= link_to "#{like.activity.name}", activity_path(like.activity), class: "button liking-button" %>
            </div>
          </div>





          <% end %>
        </div>
      </div>
    </div>


  </div>
</div>
