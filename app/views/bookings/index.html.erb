
<div class="container">

  <div class="my-page">
    <div class="dasboar-card">

      <div class="avatar-dashboard">
        <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar-large" %>
      </div>

      <div class="user-information">
        <h2><%= current_user.username.capitalize %></h2>

      </div>
    </div>


  <div id="carouselExampleCaptions" class="carousel slide bookings-cards" data-bs-ride="false">
    <div class="carousel-indicators">
      <% n = 0 %>
      <% @bookings.each do |activity| %>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="<% n %>" class="active" aria-current="true" aria-label="Slide <% n + 1 %>"></button>
        <% n += 1 %>
      <% end %>
    </div>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="https://tinypng.com/images/social/website.jpg" class="d-block w-100" alt="...">
        <div class="carousel-caption d-none d-md-block">
          <h5>Your whole Activies</h5>
          <p><%= "You have #{@bookings.size} activities" %></p>
        </div>
      </div>

        <% @bookings.each do |booking| %>
          <div class="carousel-item">

            <img src="<%= booking.activity.image_url%>" class="d-block w-100" alt="...">
              <h5><%= booking.activity.name %></h5>
              <p><%= booking.activity.name %></p>
            <div class="carousel-caption d-none d-md-block">
            </div>
          </div>
        <% end %>


    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>


  </div>
</div>

